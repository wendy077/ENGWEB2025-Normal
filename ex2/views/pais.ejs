<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Detalhes do País: <%= pais %></title>
</head>
<body>
  <header>
    <h1>Detalhes do País: <%= pais %></h1>
  </header>

  <h2>Edições em que participou</h2>
  <% if (participacoes.length > 0) { %>
    <table border="1" cellpadding="5" cellspacing="0">
      <thead>
        <tr>
          <th>ID da Edição</th>
          <th>Ano</th>
          <th>Música</th>
          <th>Intérprete</th>
          <th>Venceu?</th>
        </tr>
      </thead>
      <tbody>
        <% participacoes.forEach(function(item){ %>
          <tr>
            <td><a href="/<%= item.id %>"><%= item.id %></a></td>
            <td><%= item.anoEdição %></td>
            <td><%= item.musica %></td>
            <td><%= item.interprete %></td>
            <td><%= item.venceu %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>Não participou em nenhuma edição.</p>
  <% } %>

  <h2>Edições organizadas</h2>
  <% if (organizadas.length > 0) { %>
    <table border="1" cellpadding="5" cellspacing="0">
      <thead>
        <tr>
          <th>ID da Edição</th>
          <th>Ano</th>
        </tr>
      </thead>
      <tbody>
        <% organizadas.forEach(function(edicao){ %>
          <tr>
            <td><a href="/<%= edicao.id %>"><%= edicao.id %></a></td>
            <td><%= edicao.anoEdição %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>Não organizou nenhuma edição.</p>
  <% } %>

  <p><a href="/">Voltar à Página Principal</a></p>
</body>
</html>
